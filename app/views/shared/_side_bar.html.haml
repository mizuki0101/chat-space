.sidebar
  .sidebar-header
    .sidebar-header__top
      %p.sidebar-header__top__username
        = current_user.name
      %ul.sidebar-header__top__items
        %li.sidebar-header__top__edit
          = link_to new_group_path do
            %i.fa.fa-edit 
        %li.sidebar-header__top__new
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog 

  .groups
    - current_user.groups.each do |group|
      .groups-group
        = link_to group_messages_path(group), class: 'groups-group' do
          .groups-group__name
            =  group.name
          .groups-group__message
            メッセージはありません
           
  

